			"name": "Add a pet error messages",
			"item": [
				{
					"name": "Error messages for adding a pet",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const nameOfTest= pm.iterationData.get(\"testName\")\r",
									"\r",
									"pm.test(nameOfTest, function () {\r",
									"    pm.response.to.have.status(pm.iterationData.get(\"expectedStatus\"));\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"/*use a .json file for data. The format of .json is: \r",
									"{\r",
									"    \"testName\":\"Correct data\",\r",
									"    \"body\": {\r",
									"      \"name\": \"Whiskerstest\",\r",
									"      \"species\": 1,\r",
									"      \"birth\": \"2022-12-25T00:00:00.000Z\",\r",
									"      \"gender\": 0,\r",
									"      \"isNeutered\": true,\r",
									"      \"description\": \"Playful and affectionate Domestic Shorthair cat. Adaptable and thrives in most households.\",\r",
									"      \"pictureLink\": \"https://lh3.googleusercontent.com/u/0/drive-viewer/AKGpihZHkIHKVx7e9wzZfVln6QKLdoHo7OOrSo_RXIjTzR0lFK9AAK-LqpvRFZRUhl0HAWUqlSw2MtP3Eksa0egyK3p3gkUgCTleEZo=w1110-h911-rw-v1\"\r",
									"    },\r",
									"    \"expectedStatus\": 200\r",
									"  }\r",
									"the testName and expectedStatus is used in Post-response  \r",
									"*/\r",
									"const requestData = pm.iterationData.toJSON();\r",
									"const theBody = requestData.values[1].value;\r",
									"\r",
									"pm.collectionVariables.set(\"requestData\",JSON.stringify(theBody));"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{{requestData}}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/pet",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"pet"
							]
						}
					},
					"response": []
				},
